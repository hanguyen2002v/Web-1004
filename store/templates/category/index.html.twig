{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}
	<div class="container col-md-8 text-center mt-3">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<h4>Category List
							<a href="{{path('category_add')}}" class="btn btn-primary float-end">Add Categories</a>
						</h4>
					</div>
					<div class="card-body">
						<table class="table table-bordered table-striped">
							<thead>
								<tr>
									<th>ID</th>
									<th>Name Catgory</th>
									<th>Action</th>
								</tr>
								{% for category in category %}
									<tr>
										<td class="text text-success">{{category.id}}</td>
										<td class="text text-success">{{category.name}}</td>
										<td>
											<a href="{{path('category_edit', {'id': category.id })}}" class="btn btn-success">Edit</a>
											<a href="{{path('category_delete', {'id': category.id })}}" onclick="return confirm('Do you want to delete this category ?')" class="btn btn-danger">Delete</a>
										</td>
									</tr>
								{% endfor %}
							</thead>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
