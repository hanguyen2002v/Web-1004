{% extends "base.html.twig" %}

{% block body %}
	<div class="container col-md-8 mt-3">
		<div class="row">
			<div class="col-md-4">
				<div class="card">
					<img src="{{product.image}}">
				</div>
			</div>
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h3 class="text text-primary text-center">{{product.name}}</h3>
					</div>
					<div class="card-body">
						<h3 class="text text-info">Price:
							{{product.price}}
							$</h3>
						<h3 class="text text-info">Category:
							{{product.category.name}}</h3>
						<h3 class="text text-info">Information:
							{{product.info}}</h3>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
