{% extends 'base.html.twig' %}

{% block body %}
	<div class="container col-md-12 text-center mt-3">
		<div class="row">
			<div class="col-md-12">
				<div class="card " style="width: 100%">
					<div class="card-header">
						<h4>Product List
							<a href="{{path('product_add')}}" class="btn btn-primary float-end">Add Product</a>
						</h4>
					</div>
					<div class="card-body">
						<table class="table table-bordered table-striped">
							<thead>
								<tr>
									<th>ID</th>
									<th>Product ID</th>
									<th>Product Name</th>
									<th>Product Price</th>
									<th>Product Quantity</th>
									<th>Product Information</th>
									<th>Product Image</th>
									<th>Product Catgory</th>
									<th>Action</th>
								</tr>
								{% for product in product %}
									<tr>
										<td class="text text-success">{{product.id}}</td>
										<td class="text text-success">{{product.productID}}</td>
										<td class="text text-success">{{product.name}}</td>
										<td class="text text-success">{{product.price}}</td>
										<td class="text text-success">{{product.quantity}}</td>
										<td class="text text-success">{{product.info}}</td>
										<td class="text text-success">{{product.image}}</td>
										<td class="text text-success">{{product.category.name}}</td>
										<td>
											<a href="{{path('product_detail', {'id': product.id })}}" class="btn btn-success">Detail</a>
											<a href="{{path('product_edit', {'id': product.id })}}" class="btn btn-success">Edit</a>
											<a href="{{path('product_delete', {'id': product.id })}}" onclick="return confirm('Do you want to delete this category ?')" class="btn btn-danger">Delete</a>
										</td>
									</tr>
								{% endfor %}
							</thead>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
